<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data noupdate="1">

        <record id="hr_transfer_cron" model="ir.cron" forcecreate="True">
            <field name="name">Employee Transfers</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field
                name="nextcall"
                eval="(DateTime.now() + timedelta(hours= +(24-DateTime.now().hour))).strftime('%Y-%m-%d %H:%M:%S')"
            />
            <field name="doall" eval="True" />
            <field name="model_id" ref="model_hr_transfer" />
            <field name="code">model.try_pending_transfers()</field>
        </record>

    </data>

</odoo>
