<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_job_form" model="ir.ui.view">
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet" position="inside">
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                <field name="active" invisible="1"/>
            </xpath>
            <xpath expr="//h1//field[@name='name']/.." position="after">
                <group>
                    <field name="complete_name" string="Job Name" readonly="False"/>
                    <field name="rank_id" string="Job Rank"/>
                    <field name="mos" string="Job MOS code"/>
                    <field name="no_of_employee"/>
                    <field name="no_of_recruitment"/>
                    <field name="expected_employees"/>
                </group>
            </xpath>
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Employees" name="employees">
                    <field name="employee_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="rank_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_hr_job_tree" model="ir.ui.view">
        <field name="name">hr.job.tree</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="mos" optional="hide"/>
                <field name="rank_id" optional="hide"/>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="optional">"hide"</attribute>
            </field>
        </field>
    </record>

    <record id="view_job_filter" model="ir.ui.view">
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_job_filter"/>
        <field name="arch" type="xml">
            <search>
                <filter name="hired" string="Hired" domain="[('employee_ids', '!=', False)]"/>
                <filter name="vacant" string="Vacant" domain="[('employee_ids', '=', False)]"/>
                <searchpanel>
                    <field name="company_id"
                           select="multi"
                           groups="base.group_multi_company"
                           icon="fa-building"
                           enable_counters="1"/>
                    <field name="department_id"
                           limit="0"
                           groups="hr.group_hr_user"
                           icon="fa-building"
                           enable_counters="1"/>
                    <field name="rank_id"
                           select="multi"
                           icon="fa-building"
                           enable_counters="1"/>
                    <field name="rank_category"
                           select="multi"
                           icon="fa-users"
                           enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_department_form" model="ir.ui.view">
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form" />
        <field name="arch" type="xml">
            <!--field name="manager_id" position="attributes">
                <attribute name="domain">
                    ['|', ('department_id','=',self)]
                </attribute>
            </field-->
            <xpath expr="/form/sheet" position="inside">
                <notebook>
                    <page string="Departments" name="departments">
                        <field name="child_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="manager_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Jobs" name="jobs">
                        <field name="jobs_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="rank_id"/>
                                <field name="mos"/>
                                <field name="employee_ids"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Employees" name="employees">
                        <field name="member_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="rank_id"/>
                                <field name="job_title"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <field name="job_id" position="replace"/>
            <field name="department_id" position="before">
                    <field name="job_id" readonly="1"/>
            </field>
            <field name="department_id" position="attributes">
                <readonly>1</readonly>
            </field>
            <field name="parent_id" position="attributes">
                <readonly>1</readonly>
            </field>
        </field>
    </record>
</odoo>
